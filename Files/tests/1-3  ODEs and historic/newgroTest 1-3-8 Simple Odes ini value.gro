/*To test the initial value of odes. Fields: ini_value, ini_value_params, ini_value_dist, ini_value_fun
The distribution and the custom function are added up. Try the different ways to describe the distribution. */

include gro3

minSignal := 0.01;
odeScale := 1.0;
rateScale := 0.1;


global_params([ seed := 13631114, show_plots := true ]);


//----------------------BIOCIRCUITS---------------------------
//---cells
cell_type([ name := "cell_A", strain := "_str_nogrowth" ]);


//---metabolism
signal([ name := "s_A", kdiff := 0.2, kdeg := 0.1, colour := _magenta, colour_sat := 10.0 ]);
signal([ name := "s_B", kdiff := 0.2, kdeg := 0.1, colour := _cyan, colour_sat := 10.0 ]);


//---logic
function([ name := "fun_rate", input := { "_conc_s_A", "_conc_s_B" }, type := "sum", params := { rateScale, -rateScale } ]);
function([ name := "fun_const", type := "const", params := { 1.0 } ]);

qgate([ name := "qga_sA", input := "_conc_s_A", operator := ">=", value := minSignal ]);
//ode([ name := "ode_A", input := "fun_rate", gate := "qga_sA", ini_value := { 0.5, 0.1 }, scale := odeScale ]);

distribution([ name := "dist_normal", type := "normal", params := {10.0, 2.0} ]);
myDist := [ type := "uniform", params := {4.0, 4.1} ];
//ode([ name := "ode_A", input := "fun_rate", gate := "qga_sA", ini_value_dist := myDist, scale := odeScale ]);
ode([ name := "ode_A", input := "fun_rate", gate := "qga_sA", ini_value_fun := "fun_const", ini_value_dist := myDist, scale := odeScale ]);


//------------ WORLD CONTROL -----------------------
//---placers
cell_placer([ name := "cp_A", cell_types := {"cell_A"}, amount := 1.0, coords := [ x := 0.0, y := 0.0, r := 0.0 ] ]);

//---
timer([ name := "t_A", start := 50.0, stop := -1.0, period := 50.0 ]);

signal_placer([ name := "sp_A"
	, timer := "t_A"
	, signals := {"s_A", "s_B"}
	, amount := 3000.0
	, coords := [ x := 0.0, y := 0.0, r := 100.0 ]
]);


//------------ VISUALS -----------------------
cell_colour([ name := "ccol_red", rgb := _red, target := "ode_A", scale := 1.0 ]);

//---
cells_plot([ name := "cplt_ode", fields := { "ode_A" }, stats := {"avg"} ]);
cells_plot([ name := "cplt_signals", fields := { "_conc_s_A", "_conc_s_B" }, stats := {"avg"} ]);
cells_plot([ name := "cplt_all", fields := { "_conc_s_A", "_conc_s_B", "ode_A" }, stats := {"avg"} ]);
cells_plot([ name := "cplt_rates", fields := { "fun_rate" }, stats := {"avg"} ]);