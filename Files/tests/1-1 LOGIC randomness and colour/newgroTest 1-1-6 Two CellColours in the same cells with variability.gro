/* To test the inheritance and inertia fields of randomness, and the intensity, delta mode and delta (or delta_params) field of cell_colour
Similar to other test, but with two different colours in the same cell_type 
Useful to test how cell_colours are mixed */

include gro3

iniCellNum := 50.0;
rndInertia := 0.95;
rndPeriod := 20.0;
maxVal := 0.35;
maxValVar := 0.9;
deltaVal := 0.001;
deltaValVar := 0.001;

global_params([ seed := 123242 ]);


//----------------------BIOCIRCUITS---------------------------
//---cells
cell_type([ name := "cell_A" ]);


//---randomness and colour
randomness([ name := "rnd_maxVal_green"
	, inheritance := 0.9
	, inertia := rndInertia
	, sampling_time := rndPeriod 
]);

randomness([ name := "rnd_maxVal_red"
	, inheritance := 0.9
	, inertia := rndInertia
	, sampling_time := rndPeriod 
]);

randomness([ name := "rnd_delta_green"
	, inheritance := 0.9
	, inertia := rndInertia
	, sampling_time := rndPeriod 
]);

randomness([ name := "rnd_delta_red"
	, inheritance := 0.9
	, inertia := rndInertia
	, sampling_time := rndPeriod 
]);

//---
cell_colour([ name := "ccol_green"
	, rgb := _green
	, mode := "delta"
	, intensity_rnd := "rnd_maxVal_green"
	, intensity := { maxVal, maxValVar }
	, delta_rnd := "rnd_delta_green"
	, delta := { deltaVal, deltaValVar }
]);

cell_colour([ name := "ccol_red"
	, rgb := _red
	, mode := "delta"
	, intensity_rnd := "rnd_maxVal_red"
	, intensity := { maxVal, maxValVar }
	, delta_rnd := "rnd_delta_red"
	, delta := { deltaVal, deltaValVar }
]);


//------------ WORLD CONTROL -----------------------
//---placers
cell_placer([ name := "cp_A", cell_types := {"cell_A"}, amount := iniCellNum, coords := [ x := 0.0, y := 0.0, r := 10.0 ] ]);