/*To test how several bgates are chained */

include gro3
global_params([ seed := 130094 ]);


//----------------------BIOCIRCUITS---------------------------
//---cells
cell_type([ name := "cell_0" ]);
cell_type([ name := "cell_A", plasmids := {"p_A"} ]);
cell_type([ name := "cell_AB",  plasmids := { "p_A", "p_B" } ]);
cell_type([ name := "cell_C", plasmids := { "p_C" } ]);


//---elements
plasmid([ name := "p_A" ]);
plasmid([ name := "p_B" ]);
plasmid([ name := "p_C" ]);


//---gates
bgate([ name := "ga_pA", input := { "p_A" } ]);
bgate([ name := "ga_pB", input := { "p_B" } ]);
bgate([ name := "ga_pC", input := { "p_C" } ]);
bgate([ name := "ga_pAB", input := { "ga_pA", "p_B" } ]);
bgate([ name := "ga_chain", input := { "ga_pAB" } ]);


//------------ WORLD CONTROL -----------------------
//---placers
cell_placer([ name := "cp_0", cell_types := {"cell_0"}, amount := 10.0, coords := [ x := -200.0, y := -200.0, r := 0.0 ] ]);
cell_placer([ name := "cp_A", cell_types := {"cell_A"}, amount := 10.0, coords := [ x := -200.0, y := 200.0, r := 0.0 ] ]);
cell_placer([ name := "cp_AB", cell_types := {"cell_AB"}, amount := 10.0, coords := [ x := 200.0, y := -200.0, r := 0.0 ] ]);
cell_placer([ name := "cp_C", cell_types := {"cell_C"}, amount := 10.0, coords := [ x := 200.0, y := 200.0, r := 0.0 ] ]);


//------------ VISUALS -----------------------
cell_colour([ name := "ccol_green", gate :=  "ga_pAB", rgb := _green ]);
cell_colour([ name := "ccol_blue", gate :=  "ga_chain", rgb := _blue ]);